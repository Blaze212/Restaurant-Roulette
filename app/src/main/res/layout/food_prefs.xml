<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="14"
    android:clickable="true"
    android:id="@+id/grid_layout"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ethnicities"
        android:id="@+id/txt_Ethnicities"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="American"
        android:id="@+id/chk_american"
        android:layout_row="2"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chinese"
        android:id="@+id/chk_chinese"
        android:layout_row="3"
        android:layout_column="0" />

    <CheckBox
        android:id="@+id/chk_french"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="French"
        android:layout_column="0"
        android:layout_row="4"
        android:padding="8dp" />
    <CheckBox
        android:id="@+id/chk_czech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czech"
        android:layout_column="0"
        android:layout_row="5"
        android:padding="8dp" />
    <CheckBox
        android:id="@+id/chk_german"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="German"
        android:layout_column="0"
        android:layout_row="6"
        android:padding="8dp" />
    <CheckBox
        android:id="@+id/chk_greek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greek"
        android:layout_column="0"
        android:layout_row="7"
        android:padding="8dp" />
    <CheckBox
        android:id="@+id/chk_indian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="India"
        android:layout_column="1"
        android:layout_row="2"
        android:padding="8dp"
        />
    <CheckBox
        android:id="@+id/chk_irish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Irish"
        android:layout_column="1"
        android:layout_row="3"
        android:padding="8dp"
        />
    <CheckBox
        android:id="@+id/chk_italian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italian"
        android:layout_column="1"
        android:layout_row="4"
        android:padding="8dp"
        />
    <CheckBox
        android:id="@+id/chk_mexian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mexican"
        android:layout_column="1"
        android:layout_row="5"
        android:padding="8dp"
        />
    <CheckBox
        android:id="@+id/chk_thai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thai"
        android:layout_column="1"
        android:layout_row="6"
        android:padding="8dp"
        />
    <CheckBox
        android:id="@+id/chk_vietnamese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vietnamese"
        android:layout_column="1"
        android:layout_row="7"
        android:padding="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dining Level"
        android:id="@+id/txt_dining_level"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="2" />
    <CheckBox
        android:id="@+id/chk_fastfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fast Food"
        android:layout_column="0"
        android:layout_row="9"
        android:padding="8dp" />
    <CheckBox
        android:id="@+id/chk_casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casual"
        android:layout_column="0"
        android:layout_row="10"
        android:padding="8dp" />
    <CheckBox
        android:id="@+id/chk_fancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Fancy Restaurant"
        android:layout_column="0"
        android:layout_row="11"
        />







</GridLayout>